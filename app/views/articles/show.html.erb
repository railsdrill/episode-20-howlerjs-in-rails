<div data-controller="howler">
<p style="color: green"><%= notice %></p>

<%= render @article %>

<button data-action="howler#pauseMusic">Pause </button>
<button data-action="howler#playMusic">Play </button>
<button data-action="howler#stopMusic">Stop </button>

<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", articles_path %>

  <%= button_to "Destroy this article", @article, method: :delete %>
</div>
</div>
